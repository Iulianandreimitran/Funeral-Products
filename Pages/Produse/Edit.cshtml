@page
@model PompeFunebre.Pages.Produse.EditModel
@{
}


<br />
<h2>Edit Produs</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<form method="POST">
    <input type="hidden" name="ProduseID" value="@Model.produseInfo.ProduseID" />
    <div class="row mb-3">
        <label class=" col-sm-3 col-form-label">FurnizoriID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="furnizoriID" value="@Model.produseInfo.FurnizoriID">
        </div>
    </div>
    <div class="row mb-3">
        <label class=" col-sm-3 col-form-label">Nume</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nume" value="@Model.produseInfo.Nume">
        </div>
    </div>
    <div class="row mb-3">
        <label class=" col-sm-3 col-form-label">Pret</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="pret" value="@Model.produseInfo.Pret">
        </div>
    </div>
    <div class="row mb-3">
        <label class=" col-sm-3 col-form-label">Material</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="material" value="@Model.produseInfo.Material">
        </div>
    </div>
    <div class="row mb-3">
        <label class=" col-sm-3 col-form-label">Stoc</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Stoc" value="@Model.produseInfo.Stoc">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alertalert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }


    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>
